<mvc:View
    controllerName="sap.ui.demo.todo.controller.App"
    displayBlock="true"
    xmlns:webc="sap.ui.demo.todo.control"
    webc:import="@ui5/webcomponents/dist"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    xmlns:html="http://www.w3.org/1999/xhtml"
    core:require="{'iconAdd': 'sap/ui/webc/common/thirdparty/icons/add', 'iconDelete':'sap/ui/webc/common/thirdparty/icons/delete', 'iconEdit':'sap/ui/webc/common/thirdparty/icons/edit'}">

    <webc:Title class="title" text="{i18n>app_title}"/>

    <html:div class="searchbar">
        <webc:Input id="newTodo" value="{/newTodo}" change=".addTodo" placeholder="{i18n>todo_input_placeholder}"/>
        <webc:Button text="{i18n>todo_button_add}" design="Emphasized" click=".addTodo" icon="add"/>
    </html:div>

    <html:div class="content">
        <webc:List default="{/todos}">
            <webc:CustomListItem class="todoItems">
                <webc:CheckBox checked="{completed}" change=".completeTodo"/>
                <webc:Label text="{title}"/>
                <webc:Button icon="edit" click=".editTodo"/>
                <webc:Button icon="delete" design="Negative" click=".deleteTodo"/>
            </webc:CustomListItem>
        </webc:List>
    </html:div>

    <webc:Dialog id="editDialog" headerText="{i18n>todo_dialog_edit_header}">
        <webc:Input value="{title}" id="editTodo" class="dialogTodoInput" change=".closeEdit"/>
        <!--footer>
            <webc:Button class="dialogCloseButton" design="Emphasized" text="{i18n>todo_dialog_close_button}" click=".closeEdit"/>
        </footer-->
    </webc:Dialog>

</mvc:View>